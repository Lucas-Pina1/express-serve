<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
  </head>

  <body>
    <%- include('partials/header.ejs') %>

    <section class="container">
      <%- include('partials/navbar.ejs') %>

      <article class="content">
        <h1>Posts</h1>

        <div class="posts">
          <% posts.forEach((item)=> { %>
          <div class="post">
            <h3><%- item.title %></h3>
            <p><%- item.text %></p>

            <% if (item.stars) { %> 
              <% for( let index=0; index < item.stars; index++ ) { %>
                <img
                src="https://thumbs.dreamstime.com/b/cone-da-estrela-no-fundo-
                branco-ilustra-o-do-vetor-projeto-liso-amarelo-147159584.jpg"
                alt=""
                width="20"
              >
             <% } %> 
            <% } %>
          </div>
          <% }) %>
        </div>
      </article>
    </section>

    <%- include('partials/footer.ejs') %> <%- include('partials/foot.ejs') %>
  </body>
</html>
